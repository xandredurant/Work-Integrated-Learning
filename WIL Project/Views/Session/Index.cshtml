    <script>

        // Add a click event handler to show/hide program details
        $('.show-details').click(function () {
            $(this).siblings('.program-details').toggle();
        });

        // Add a click event handler to toggle the class 'added' on the "Add" button
        $('.add-program-button').click(function () {
            $(this).toggleClass('added');
        });
        function addSession(sessionName, date) {
            // Send an AJAX request to the server to add the session
            $.post("/Session/AddSession", { session_name: sessionName, date: date }, function (data) {
