<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/speakers.css" asp-append-version="true" />
    <title>Speakers</title>
</head>
<body class="speakersL">
    <header class="speakerhead">
        <h1>Our Esteemed Speakers</h1>
        <p>Welcome to TECHSPO Johannesburg 2023</p>
    </header>

    <section class="speakers">
        @foreach (var speaker in Model)
        {
            <div class="speaker">
                <img src="~/images/speaker-default.jpg" alt="Speaker Image">
                <h2>@speaker.SpeakerName</h2>
                <p>@speaker.SpeakerAffiliation</p>
                <p>Topic: @speaker.SpeakerTopic</p>
            </div>
        }
    </section>
</body>
</html>